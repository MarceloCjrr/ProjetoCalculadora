<Window x:Class="ProjetoCalculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoCalculadora"
        mc:Ignorable="d"
        Title="Calculadora" Height="540" Width="356" WindowStartupLocation="CenterScreen" Background="#FF26282D"
        ResizeMode="NoResize">



    <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Width="356" Height="519" Background="#FF090B11">
        <Button x:Name="BtnSoma" Content="+" Height="35" Margin="41,212,0,0" Width="131" Click="BtnSoma_Click" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF6818E2" FontSize="22" BorderBrush="#FF230B38" Cursor="Hand" FontFamily="Bahnschrift"/>
        <Button x:Name="BtnMultiplicacao" Content="x" Height="34" Margin="41,260,0,0" Width="131" Click="BtnMultiplicacao_Click" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF6414DE" FontSize="20" Cursor="Hand" FontFamily="Bahnschrift"/>
        <Button x:Name="BtnSubtrair" Content="-" Height="35" Margin="189,212,0,0" Width="131" Click="BtnSubtrair_Click" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF6414DE" FontSize="22" Cursor="Hand" FontFamily="Bahnschrift"/>
        <Button x:Name="BtnDivisao" Content="÷ " Height="34" Margin="189,260,0,0" Width="131" Click="BtnDivisao_Click" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF6414D5" FontSize="22" Cursor="Hand" FontFamily="Bahnschrift"/>
        <Button x:Name="BtnPotencia" Content="x^y" Height="35" Margin="41,306,0,0" Width="131" Click="BtnPotencia_Click" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFC516D8" FontSize="18" Cursor="Hand" FontFamily="Bahnschrift"/>
        <Button x:Name="BtnRaiz" Content="√x" Height="35" Margin="189,306,0,0" Width="131" Click="BtnRaiz_Click" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFC516D8" FontSize="18" Cursor="Hand" FontFamily="Bahnschrift"/>
        <Button x:Name="BtnModulo" Content="mod" Height="35" Margin="41,351,0,0" Width="131" Click="BtnModulo_Click" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFC516D8" FontSize="16" Cursor="Hand" FontFamily="Bahnschrift"/>
        <Button x:Name="BtnLimpar" Content="Limpar" Height="35" Margin="189,351,0,0" Width="131" Click="Button_Click" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF726F73" FontFamily="Bahnschrift" Cursor="Hand" FontSize="16"/>
        <TextBox x:Name="TxtNumero1"
                 Text="Digite o primeiro número"
                 Foreground="#FF828282"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap"
                 Width="279"
                 VerticalContentAlignment="Center"
                 RenderTransformOrigin="0.508,0.478"
                 Margin="41,102,0,0"
                 Height="28"
                 HorizontalAlignment="Left"
                 Background="#FF0F131A"
                 GotFocus="TxtNumero1_GotFocus"
                 LostFocus="TxtNumero1_LostFocus"
                 PreviewTextInput="TxtNumero_PreviewTextInput"/>
        <Viewbox HorizontalAlignment="Left" Height="14" Margin="50,125,0,0" VerticalAlignment="Top" Width="79" Stretch="Fill"/>
        <TextBlock HorizontalAlignment="Left" Height="14" Margin="30,144,0,0" TextWrapping="Wrap" Text="Numero 02:" VerticalAlignment="Top" Width="78" FontFamily="Bahnschrift" Foreground="White"/>
        <TextBox x:Name="TxtResultado" HorizontalAlignment="Left" Height="28" Margin="41,424,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" Foreground="#FF828282" Background="#FF0F131A" Text=" O resultado aparecerá aqui" HorizontalContentAlignment="Center" IsReadOnly="True" IsTabStop="False"/>
        <TextBlock HorizontalAlignment="Left" Height="14" Margin="30,405,0,0" TextWrapping="Wrap" Text="Resultado:" VerticalAlignment="Top" Width="79" FontFamily="Bahnschrift" Foreground="White"/>
        <TextBox x:Name="TxtNumero2"
                 Text="Digite o segundo número"
                 Foreground="#FF828282"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap"
                 Width="279"
                 VerticalContentAlignment="Center"
                 RenderTransformOrigin="0.508,0.478"
                 Margin="41,163,0,0"
                 Height="28"
                 HorizontalAlignment="Left"
                 Background="#FF0F131A"
                 GotFocus="TxtNumero2_GotFocus"
                 LostFocus="TxtNumero2_LostFocus"
                 PreviewTextInput="TxtNumero_PreviewTextInput"/>
        <TextBlock HorizontalAlignment="Center" Height="32" Margin="0,38,0,0" TextWrapping="Wrap" Text="Calculadora" VerticalAlignment="Top" Width="121" FontFamily="Bahnschrift" FontSize="22" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Height="14" Margin="30,83,0,0" TextWrapping="Wrap" Text="Numero 01:" VerticalAlignment="Top" Width="78" FontFamily="Bahnschrift" Foreground="White"/>

    </Grid>
</Window>
